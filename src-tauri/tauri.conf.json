{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ExaStoneBoard",
  "version": "0.1.0",
  "identifier": "com.excastoneboard.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ExaStoneBoard - Excalidraw Board Manager",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "Multi-board manager for Excalidraw",
    "longDescription": "A wrapper application for Excalidraw that allows managing multiple drawing boards without losing access to old ones. Supports collaboration via sharing mode.",
    "category": "Productivity"
  },
  "plugins": {
    "deep-link": {
      "mobile": [],
      "desktop": {
        "schemes": ["excastoneboard", "excalidraw"]
      }
    }
  }
}
